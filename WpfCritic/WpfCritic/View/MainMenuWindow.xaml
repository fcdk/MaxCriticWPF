<Window x:Class="WpfCritic.View.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCritic.View"
        mc:Ignorable="d"
        Title="MaxCritic" Height="595.197" Width="448.32">
    <Grid Background="AliceBlue">
        <Grid Background="#FFD1D8FB">

            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" >
                <TextBlock Text="никнейм типа тут будет и ава" />
            </StackPanel>

            <TabControl Grid.Row="1" HorizontalAlignment="Left" >
                <TabItem Header="Фільми">
                    <TabItem.Content>
                        <local:EntertainmentUserControl Grid.Row="3" x:Name="MovieControl" DataContext="{Binding EditGameViewModel}" />
                    </TabItem.Content>
                </TabItem>
                <TabItem Header="Ігри">
                    <TabItem.Content>
                        <local:EntertainmentUserControl Grid.Row="3" x:Name="GameControl" DataContext="{Binding EditGameViewModel}" />
                    </TabItem.Content>
                </TabItem>
            </TabControl>

        </Grid>
    </Grid>
</Window>
