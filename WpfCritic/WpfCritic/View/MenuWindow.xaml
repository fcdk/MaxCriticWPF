<Window x:Class="WpfCritic.View.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCritic.View"
        mc:Ignorable="d"
        Title="Главное меню" Height="300" Width="206.383">
    <Grid Background="AliceBlue">
        <Grid Margin="4,8,4,8">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Label Content="MaxCritic" Margin="0, 4, 0, 4" FontWeight="Bold" FontFamily="French Script MT" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF00167C" />
                <Button Name="moviesShowButton" Content="Фильмы" Margin="0, 4, 0, 4" Padding="4,2,4,2" FontWeight="Bold" Click="moviesShowButton_Click" />
                <Button Name="gameShowButton" Content="Игры" Margin="0, 4, 0, 4" Padding="4,2,4,2" FontWeight="Bold" Click="gamesShowButton_Click" />
                <Button Name="musicShowButton" Content="Музыка" Margin="0, 4, 0, 4" Padding="4,2,4,2" FontWeight="Bold" Click="musicShowButton_Click" />
                <Button Name="exitButton" Content="Выйти" Margin="0, 4, 0, 4" Padding="4,2,4,2" FontWeight="Bold" Click="exitButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
